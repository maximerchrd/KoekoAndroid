<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:drawableTop="@drawable/list_icon"
        android:paddingTop="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/red"
        android:text="@string/results_list"
        android:onClick="showResultsList"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:drawableTop="@drawable/chart_icon"
        android:paddingTop="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/blue"
        android:text="@string/results_graph"
        android:onClick="showResultsGraph"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button4"
        android:drawableTop="@drawable/city_icon"
        android:paddingTop="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/yellow"
        android:text="@string/results_city"
        android:onClick="showCityRepresentation"
        android:textColor="@color/white" />

</LinearLayout>