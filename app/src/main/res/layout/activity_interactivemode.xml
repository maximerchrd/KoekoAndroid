<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@color/white"
	tools:context=".Activities.InteractiveModeActivity"
	android:id="@+id/viewgroup">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:keepScreenOn="true"
		android:orientation="vertical"
		android:weightSum="1">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="158dp"
			android:layout_height="158dp"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.26"
			android:contentDescription="@string/keepcalmimage"
			android:src="@drawable/keep_calm_crown" />

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.03"
			android:text="KEEP CALM"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:layout_weight="0.26"
			android:text="Instructions (either to wait for next question or to restart the classroom activity"
			android:textAlignment="center"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/black" />


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="30dp"
			android:layout_weight="0.45"
			android:orientation="horizontal">

			<Button
				android:id="@+id/toggle_connection"
				android:layout_width="wrap_content"
				android:layout_height="90dp"
				android:layout_gravity="center"
				android:backgroundTint="@color/koekored"
				android:text="@string/stop_connection" />

			<View
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_weight="1" />

			<Button
				android:id="@+id/scan_qr_button"
				android:layout_width="wrap_content"
				android:layout_height="90dp"
				android:layout_gravity="center"
				android:backgroundTint="@color/white"
				android:drawableTop="@drawable/qrimage" />
		</LinearLayout>


	</LinearLayout>
</RelativeLayout>