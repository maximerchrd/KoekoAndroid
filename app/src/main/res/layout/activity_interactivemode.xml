<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@color/white"
	tools:context=".Activities.InteractiveModeActivity"
	android:id="@+id/viewgroup">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:keepScreenOn="true"
		android:orientation="vertical"
		android:weightSum="10">
		<TextView
			android:id="@+id/bridgesTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="20dp"
			android:layout_weight="0.5"
			android:text="Number of bridges: 0"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/black" />

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="158dp"
			android:layout_height="158dp"
			android:layout_gravity="center_horizontal"
			android:layout_weight="2.5"
			android:contentDescription="@string/keepcalmimage"
			android:src="@drawable/keep_calm_crown" />

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="2.5"
			android:text="KEEP CALM"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:layout_weight="2.5"
			android:text="Instructions (either to wait for next question or to restart the classroom activity"
			android:textAlignment="center"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/black" />

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="0.2" />


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="15dp"
			android:orientation="vertical"
			android:gravity="center|bottom">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:weightSum="2"
				android:orientation="horizontal">

				<Button
					android:id="@+id/hotspotButtonDiscover"
					android:layout_width="match_parent"
					android:lines="2"
					android:layout_height="90dp"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:backgroundTint="@color/blue"
					android:text="Button" />

				<Button
					android:id="@+id/hotspotButtonAdvertise"
					android:layout_width="match_parent"
					android:lines="2"
					android:layout_height="90dp"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:backgroundTint="@color/green"
					android:text="Button" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:weightSum="2"
				android:orientation="horizontal">

				<Button
					android:id="@+id/toggle_connection"
					android:layout_width="match_parent"
					android:layout_height="90dp"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:backgroundTint="@color/koekored"
					android:text="@string/stop_connection" />

				<Button
					android:id="@+id/scan_qr_button"
					android:layout_width="match_parent"
					android:layout_height="90dp"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:backgroundTint="@color/white"
					android:drawableTop="@drawable/qrimage" />

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>